<div class="topbar">
  <%= link_to "<< #{@album.name.upcase} ", "/albums/#{@album.id}", method: :get %> &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
  <%= link_to " EDIT ", edit_track_url, method: :get %> &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
  <%= link_to " DELETE ", "/tracks/#{@track.id}", method: :delete %>
</div>

<div class="outerborder">
  <div class="page">
    <h1><%= @track.name %> <%= "(#{@track.track_type})" if @track.track_type == "Bonus" %></h1>

    <hr>

    <h3><center>Lyrics</center></h3>
    <center><%= ugly_lyrics(@track.lyrics) %></center>

    <br>

  </div>
</div>

<br><br>

<div class="outerborder">
  <div class="page">
    <center>
      <div class="notes">
        <h4>New Note</h4>
        <%= render "notes/form", { track: @track } %>
        <hr>
        <h4>Notes</h4>
        <%= render @notes %>
      </div>
    </center>
  </div>
</div>
