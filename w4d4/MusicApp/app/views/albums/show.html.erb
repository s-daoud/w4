<div class="topbar">
  <%= link_to "<< #{@band.name.upcase} ", "/bands/#{@band.id}", method: :get %> &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
  <%= link_to " NEW TRACK ", "/albums/#{@album.id}/tracks/new", method: :get %> &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
  <%= link_to " EDIT ", edit_album_url, method: :get %> &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
  <%= link_to " DELETE ", "/albums/#{@album.id}", method: :delete %>
</div>

<div class="outerborder">
  <div class="page">
    <h1><%= @album.name %> <%= "(#{@album.album_type})" if @album.album_type == "Live" %></h1>

    <hr>

    <h3><center>Tracks<center></h3>

    <% unless @album.tracks.empty? %>
      <% @album.tracks.each do |track| %>
        <center><a href="<%= track_url(track) %>"><%= track.name %> <%= "(#{track.track_type})" if track.track_type == "Bonus" %></a></center>
      <% end %>
    <% else %>
      <center>None yet! Add new track above.</center>
    <% end %>

  </div>
</div>
