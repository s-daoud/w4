<h1>Rent a cat!</h1>

<form action="<%= cat_rental_requests_url %>" method="post">
  <%= auth_token %>

  <label for="which_cat">Select cat: </label>
  <select name="cat_rental_request[cat_id]" id="which_cat">
    <option disabled selected>Select A Cat</option>
    <% @cats.each do |cat| %>
    <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>

  <br><br>

  <label for="rental_start_date">Requested start date: </label>
  <input type="date" name="cat_rental_request[start_date]" id="rental_start_date">

  <br><br>

  <label for="rental_end_date">Requested end date: </label>
  <input type="date" name="cat_rental_request[end_date]" id="rental_end_date">

  <br><br>

  <input type="submit" value="Request cat!">
</form>

<% content_for :footer do %>
  <p>Rent a cat here!</p>
<% end %>
